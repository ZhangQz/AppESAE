<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XApp6.ListaPessoasPage">
    
    <StackLayout>
        <!-- TÍTULO DA PÁGINA -->
        <Label x:Name="lblTitulo"
               Text="Página «Listar Pessoas»"
               TextColor="White"
               FontSize="Medium"
               HorizontalTextAlignment="Center"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="Start"
               BackgroundColor="#00a76c"
               HeightRequest="45"/>

        <!-- LISTVIEW DAS PESSOAS -->
        <ListView x:Name="listapessoas"
                  ItemSelected="listapessoas_ItemSelected">
            <ListView.Header>
                <StackLayout BackgroundColor="#cccccc">
                    <Label Text="Lista de Pessoas"/>
                    <Label Text="Lista de alunos do ISMT" FontSize="Small"/>
                </StackLayout>
            </ListView.Header>
        </ListView>

        <!-- BOTÃO DE VOLTAR -->
        <Button x:Name="btnVoltar"
                Text="Voltar"
                Clicked="btnVoltar_Clicked"/>
    </StackLayout>
</ContentPage>