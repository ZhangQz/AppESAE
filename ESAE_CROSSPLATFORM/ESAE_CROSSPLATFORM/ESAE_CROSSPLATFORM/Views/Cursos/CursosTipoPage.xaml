<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ESAE_CROSSPLATFORM.Views.Cursos.CursosTipoPage"
             Title="Ofertas Formativas">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Mestrados"
                    x:Name="BtnMestrados"
                    Clicked="BtnMestrados_Clicked"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand"
                    BackgroundColor="White"/>
            <Button Text="Pós Graduações"
                    x:Name="BtnPosGrad"
                    Clicked="BtnPosGrad_Clicked"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand"
                    BackgroundColor="White"/>
            <Button Text="Cursos Livres"
                    x:Name="BtnLivre"
                    Clicked="BtnLivre_Clicked"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand"
                    BackgroundColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>