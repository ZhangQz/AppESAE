                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Text="17h30&#x0a; - &#x0a;20h30" TextColor="White" Grid.Column="0" FontSize="Medium" HorizontalOptions="StartAndExpand"
