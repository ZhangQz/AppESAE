             x:Class="MDP.Master"
             Title="Menu - Não Visível"
             BackgroundColor="Yellow">

    <!-- menu lateral -->
    <StackLayout Padding="20 10" >
        <Button x:Name="BtnCursos"
                Text="Ofertas Formativas"
                Clicked="BtnCursos_Clicked"/>
        <Button x:Name="BtnCalendario"
                Text="Calendário"
                Clicked="BtnCalendario_Clicked"/>
        <Button x:Name="BtnDocumentos"
                Text="Documentos"
                Clicked="BtnDocumentos_Clicked"/>
