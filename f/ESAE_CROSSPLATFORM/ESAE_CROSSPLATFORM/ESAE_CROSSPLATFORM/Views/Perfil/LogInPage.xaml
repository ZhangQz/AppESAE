<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ESAE_CROSSPLATFORM.Views.Perfil.LogInPage"
             Title="Log In">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                <Label Text="Número de Aluno" 
                   HorizontalOptions="Center" 
                   TextColor="Black" 
                   FontSize="Medium" 
                   FontAttributes="Bold" />

                <Entry Placeholder="Número de Aluno" 
                   Margin="100,0,100,0" 
                   FontSize="Small"/>

                <Label Text="Password" 
                   HorizontalOptions="Center" 
                   TextColor="Black" 
                   FontSize="Medium" 
                   FontAttributes="Bold"/>

                <Entry IsPassword="True" 
                   Placeholder="******" 
                   Margin="100,0,100,0" 
                   FontSize="Small"/>

                <Button Text="Entrar"
                    BackgroundColor="White"
                    x:Name="BtnLog"
                    Clicked="BtnLog_Clicked"
                    Margin="100,0,100,0"
                    />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>